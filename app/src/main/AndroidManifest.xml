<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rosheta">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rosheta"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".views.pages.c_home.Home"
            android:exported="false" />
        <activity
            android:name=".views.pages.b_account.Login"
            android:noHistory="true"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".views.pages.b_account.SignUp"
            android:exported="false" />
        <activity
            android:name=".views.pages.a_intro.onBoardingScreen"
            android:noHistory="true"
            android:exported="false" />
        <activity
            android:name=".views.pages.a_intro.ChooseScreen"
            android:exported="false" />
        <activity
            android:name=".views.pages.a_intro.SplashScreen"
            android:noHistory="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>