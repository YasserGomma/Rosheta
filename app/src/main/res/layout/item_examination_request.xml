<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_examination_request_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg_1"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_examination_request_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Clinic name"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_examination_request_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_examination_request_name"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ge_ss_medium"
                android:text="Clinic Add"
                android:textColor="#F87474"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_examination_request_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_examination_request_address"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/ge_ss_medium"
                android:text="Date"
                android:textColor="#F87474"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_examination_request_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_examination_request_date"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sofiapro_reguler"
                android:text="Status : "
                android:textColor="@color/green"
                android:textSize="15sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_examination_request_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@color/black"
        android:textSize="26dp" />
</RelativeLayout>