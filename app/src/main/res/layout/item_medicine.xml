<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_medicine_layout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/et_bg_1"
           android:padding="5dp"
           >

           <TextView
               android:id="@+id/item_medicine_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/opensans_bold"
               android:text="Medicine name"
               android:textColor="@color/black"
               android:textSize="18sp" />

           <TextView
               android:id="@+id/item_medicine_description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/item_medicine_name"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/ge_ss_medium"
               android:text="Medicine Description"
               android:textColor="#F87474"
               android:textSize="15sp" />

           <TextView
               android:id="@+id/item_medicine_price"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/item_medicine_description"
               android:layout_marginTop="5dp"
               android:fontFamily="@font/sofiapro_reguler"
               android:text="Price : "
               android:textColor="@color/primary_color"
               android:textSize="15sp" />
       </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>