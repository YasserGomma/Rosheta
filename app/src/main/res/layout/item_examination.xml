<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_examination_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginVertical="5dp"
        android:clipToPadding="false"
        android:elevation=".5dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_lineargradient"
            android:padding="10dp">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor_pic" />
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="#F87474"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="15dp"
                android:id="@+id/examination_view"
                android:layout_below="@id/tv_examination_doc_name"
                />

            <TextView
                android:id="@+id/tv_examination_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/opensans_bold"
                android:padding="5dp"
                android:text="Doctor Name"
                android:textColor="#F87474"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/tv_examination_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/examination_view"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/sofiapro_reguler"
                android:gravity="center"
                android:text="id"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/examination_view"
                android:src="@drawable/id" />

            <TextView
                android:id="@+id/tv_examination_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_examination_id"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/sofiapro_reguler"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="date"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/tv_examination_id"
                android:src="@drawable/date" />

            <TextView
                android:id="@+id/tv_examination_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_examination_date"
                android:fontFamily="@font/sofiapro_reguler"
                android:padding="2dp"
                android:text="price"
                android:layout_marginLeft="25dp"

                android:textColor="@color/white"
                android:textSize="12sp" />
            <ImageView
                android:layout_below="@id/tv_examination_date"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/price"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_examination_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:textSize="26dp" />


</RelativeLayout>